<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.AccountSafetyFIDO" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
        <item name="android:actionBarSize">@dimen/action_bar_size</item>
        <item name="actionBarSize">@dimen/action_bar_size</item>
        <item name="android:statusBarColor" tools:ignore="DuplicateDefinition">@color/colorPrimary
        </item>
    </style>

    <style name="btn_normal" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">SourceHanSansCN-Regular</item>
        <item name="android:background">@drawable/btn_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="btn_amber" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">SourceHanSansCN-Regular</item>
        <item name="android:background">@drawable/btn_amber</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="empty_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_14</item>
        <item name="android:background">@color/Grey_300</item>
    </style>

    <style name="line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_1</item>
        <item name="android:background">@color/Grey_300</item>
    </style>

</resources>